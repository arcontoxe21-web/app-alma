:root {
  --primary: #10fbba;
  --primary-dark: #0a8e69;
  --accent: #d4af37;
  --bg-dark: #080808;
  --bg-surface: #151515;
  --text-main: #f8f9fa;
  --text-muted: #8e8e93;
  --text-dim: #5c5c5e;
  --danger: #ff3b30;

  --shadow-neon: 0 0 30px rgba(16, 251, 186, 0.15);
  --glass: blur(25px) saturate(200%) brightness(120%);
  --radius-pro: 28px;

  --font-display: 'Outfit', sans-serif;
  --font-body: 'Inter', system-ui, sans-serif;

  --safe-top: 20px;
  --safe-bottom: 20px;
}

* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  -webkit-tap-highlight-color: transparent;
}

body {
  background-color: #000;
  color: var(--text-main);
  height: 100vh;
  overflow: hidden;
  font-family: var(--font-body);
  -webkit-font-smoothing: antialiased;
}

#app {
  max-width: 500px;
  height: 100vh;
  margin: 0 auto;
  background: var(--bg-dark);
  position: relative;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  /* Importante para las estancias */
}

/* --- NAV BAR --- */
.bottom-nav {
  position: fixed;
  bottom: 25px;
  left: 50%;
  transform: translateX(-50%);
  width: calc(100% - 40px);
  max-width: 460px;
  padding: 12px 20px;
  background: rgba(18, 18, 18, 0.85);
  backdrop-filter: blur(25px) saturate(180%);
  -webkit-backdrop-filter: blur(25px) saturate(180%);
  display: flex;
  justify-content: space-around;
  align-items: flex-end;
  border: 1px solid rgba(255, 255, 255, 0.08);
  border-radius: 35px;
  z-index: 2000;
  box-shadow: 0 20px 40px rgba(0, 0, 0, 0.6);
  transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
}

.bottom-nav.hidden {
  transform: translate(-50%, 150%);
}

.nav-link {
  color: var(--text-dim);
  text-decoration: none;
  font-size: 10px;
  font-weight: 800;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 5px;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  padding: 8px 12px;
  border-radius: 20px;
}

.nav-link i {
  font-size: 20px;
}

.nav-link.active {
  color: var(--primary);
  background: rgba(16, 251, 186, 0.08);
}

/* --- SCREENS ENGINE --- */
.screen {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  overflow-y: auto;
  padding: calc(40px + var(--safe-top)) 24px 180px;
  background: var(--bg-dark);
  display: none;
  z-index: 10;
}

.screen.active {
  display: block;
  animation: estanciaIn 0.4s cubic-bezier(0.4, 0, 0.2, 1) forwards;
}

@keyframes estanciaIn {
  from {
    opacity: 0;
    transform: scale(1.05);
  }

  to {
    opacity: 1;
    transform: scale(1);
  }
}

/* Pantalla de detalle con transici√≥n lateral o desde abajo */
#screen-detail {
  z-index: 100;
  padding: 0;
  padding-bottom: 180px;
  display: none;
}

#screen-detail.active {
  display: block;
  animation: detailIn 0.4s cubic-bezier(0.1, 0.7, 0.1, 1) forwards;
}

@keyframes detailIn {
  from {
    transform: translateY(100%);
  }

  to {
    transform: translateY(0);
  }
}

/* --- UI COMPONENTS --- */
.animal-card-dark {
  background: var(--bg-surface);
  border-radius: 32px;
  overflow: hidden;
  margin-bottom: 28px;
  border: 1px solid rgba(255, 255, 255, 0.03);
  cursor: pointer;
}

.card-img-container {
  position: relative;
  aspect-ratio: 4/5;
}

.card-img-container img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.btn-noir {
  background: linear-gradient(135deg, var(--primary), #00d2ff);
  color: #000;
  padding: 22px;
  border-radius: 24px;
  font-weight: 900;
  font-size: 16px;
  border: none;
  width: 100%;
  cursor: pointer;
  box-shadow: var(--shadow-neon);
}

/* --- TABS --- */
.rescue-tab.active {
  color: var(--primary) !important;
  border-bottom: 2px solid var(--primary);
}

/* --- CHAT STYLES --- */
.chat-bubble {
  padding: 15px 20px;
  border-radius: 20px;
  max-width: 85%;
  margin-bottom: 15px;
  font-size: 14px;
  position: relative;
}

.chat-bubble.user {
  background: var(--primary);
  color: #000;
  align-self: flex-end;
  border-bottom-right-radius: 4px;
}

.chat-bubble.other {
  background: var(--bg-surface);
  color: #fff;
  align-self: flex-start;
  border-bottom-left-radius: 4px;
  border: 1px solid rgba(255, 255, 255, 0.05);
}

.chat-input {
  background: rgba(8, 8, 8, 0.95);
  backdrop-filter: blur(10px);
  padding: 20px 25px calc(20px + var(--safe-bottom));
  display: flex;
  gap: 15px;
  border-top: 1px solid rgba(255, 255, 255, 0.05);
}

@keyframes marker-pulse {
  0% {
    transform: scale(1);
    opacity: 1;
    box-shadow: 0 0 0 0 var(--primary);
  }

  70% {
    transform: scale(1.1);
    opacity: 0.8;
    box-shadow: 0 0 0 10px rgba(16, 251, 186, 0);
  }

  100% {
    transform: scale(1);
    opacity: 1;
  }
}

.pulse-marker {
  animation: marker-pulse 2s infinite;
  box-shadow: 0 0 10px var(--primary);
}

#screen-chat {
  display: none;
  flex-direction: column;
  z-index: 1000;
  padding: 0;
}

#screen-chat.active {
  display: flex;
}

/* --- RESCUE FORM & MAP --- */
#rescue-map {
  background: var(--bg-surface);
}

.leaflet-container {
  background: var(--bg-surface) !important;
}

.leaflet-tile {
  filter: invert(100%) hue-rotate(180deg) brightness(80%) contrast(90%);
}

.input-group label {
  font-family: var(--font-display);
}

select:focus,
textarea:focus {
  outline: none;
  border-color: var(--primary) !important;
}

/* Custom Marker Pulsating Effect */
.rescue-marker-icon {
  background: var(--danger);
  border: 2px solid white;
  border-radius: 50%;
  box-shadow: 0 0 10px var(--danger);
}

.pill-tag {
  background: rgba(255, 255, 255, 0.05);
  color: var(--text-muted);
  padding: 6px 14px;
  border-radius: 10px;
  font-size: 12px;
  font-weight: 700;
}

.badge-elite {
  background: rgba(16, 251, 186, 0.2);
  color: var(--primary);
  padding: 8px 18px;
  border-radius: 100px;
  font-size: 11px;
  font-weight: 900;
  letter-spacing: 1px;
}

/* --- TOASTS --- */
.toast-container {
  position: fixed;
  top: calc(20px + var(--safe-top));
  left: 50%;
  transform: translateX(-50%);
  z-index: 9999;
  width: 90%;
  max-width: 400px;
}

.toast {
  background: rgba(21, 21, 21, 0.95);
  backdrop-filter: blur(20px);
  border: 1px solid rgba(255, 255, 255, 0.1);
  color: white;
  padding: 16px 20px;
  border-radius: 20px;
  margin-bottom: 10px;
  display: flex;
  align-items: center;
  gap: 12px;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
  animation: toastIn 0.4s cubic-bezier(0.1, 0.7, 0.1, 1) forwards;
}

.toast.success {
  border-left: 4px solid var(--primary);
}

.toast.error {
  border-left: 4px solid var(--danger);
}

.toast.info {
  border-left: 4px solid var(--accent);
}

@keyframes toastIn {
  from {
    transform: translateY(-100%);
    opacity: 0;
  }

  to {
    transform: translateY(0);
    opacity: 1;
  }
}